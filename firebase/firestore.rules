rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function hasRole(orgId, userId, role) {
      return exists(/databases/$(database)/documents/orgs/$(orgId)/users/$(userId)) &&
             get(/databases/$(database)/documents/orgs/$(orgId)/users/$(userId)).data.role == role;
    }
    function inClass(orgId, classId, userId) {
      return exists(/databases/$(database)/documents/orgs/$(orgId)/classes/$(classId)/roster/$(userId));
    }
    function isTeacher(orgId, classId, userId) {
      return inClass(orgId, classId, userId) &&
        get(/databases/$(database)/documents/orgs/$(orgId)/classes/$(classId)/roster/$(userId)).data.role == 'teacher';
    }

    match /orgs/{orgId} {
      allow read: if request.auth != null && request.auth.token.org == orgId;

      match /users/{userId} {
        allow read: if request.auth != null && request.auth.uid == userId || hasRole(orgId, request.auth.uid, 'admin');
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /classes/{classId} {
        allow read: if request.auth != null && inClass(orgId, classId, request.auth.uid);
        allow create: if request.auth != null && (hasRole(orgId, request.auth.uid, 'admin') || hasRole(orgId, request.auth.uid, 'instructor'));
        allow update, delete: if request.auth != null && isTeacher(orgId, classId, request.auth.uid);

        match /roster/{userId} {
          allow read: if request.auth != null && (isTeacher(orgId, classId, request.auth.uid) || request.auth.uid == userId);
          allow write: if request.auth != null && isTeacher(orgId, classId, request.auth.uid);
        }

        match /classwork/{workId} {
          allow read: if request.auth != null && inClass(orgId, classId, request.auth.uid);
          allow create, update, delete: if request.auth != null && isTeacher(orgId, classId, request.auth.uid);

          match /questions/{qid} {
            allow read: if request.auth != null && inClass(orgId, classId, request.auth.uid);
            allow write: if request.auth != null && isTeacher(orgId, classId, request.auth.uid);
          }

          match /submissions/{subId} {
            allow read: if request.auth != null && (isTeacher(orgId, classId, request.auth.uid) || request.auth.uid == resource.data.userId);
            allow create: if request.auth != null && request.resource.data.userId == request.auth.uid && inClass(orgId, classId, request.auth.uid);
            allow update: if request.auth != null && request.resource.data.userId == request.auth.uid;

            match /attempts/{attemptId} {
              allow read: if request.auth != null && (isTeacher(orgId, classId, request.auth.uid) || request.auth.uid == resource.data.userId);
              allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
            }
          }
        }

        match /liveSessions/{sid} {
          allow read: if request.auth != null && inClass(orgId, classId, request.auth.uid);
          allow create, update, delete: if request.auth != null && isTeacher(orgId, classId, request.auth.uid);

          match /responses/{rid} {
            allow read: if request.auth != null && inClass(orgId, classId, request.auth.uid);
            allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
          }
        }
      }

      match /presence/{userId} {
        allow write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && hasRole(orgId, request.auth.uid, 'teacher');
      }

      match /counters/{counterId} {
        allow read: if request.auth != null && request.auth.token.org == orgId;
        allow write: if false;
      }
    }
  }
}
