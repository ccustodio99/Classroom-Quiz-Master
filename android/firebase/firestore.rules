rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOrgMember(orgId) {
      return request.auth != null && request.auth.token.org == orgId;
    }

    match /orgs/{orgId} {
      allow read: if isOrgMember(orgId);
      allow write: if isOrgMember(orgId) && request.resource.data.keys().hasOnly(['classes']);

      match /classes/{classId} {
        allow read: if isOrgMember(orgId);
        allow write: if isOrgMember(orgId) && request.auth.uid == request.resource.data.ownerId;

        match /classwork/{classworkId} {
          allow read: if isOrgMember(orgId);
          allow write: if request.auth.uid == resource.data.ownerId;
        }
      }
    }
  }
}
