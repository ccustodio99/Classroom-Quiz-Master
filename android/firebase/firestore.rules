rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function orgOf() { return request.auth.token.org; }

    match /org/{org}/users/{userId} {
      allow read: if isSignedIn() && org == orgOf();
      allow write: if isSignedIn() && userId == request.auth.uid && org == orgOf();
    }

    match /org/{org}/classes/{classId} {
      allow read: if isSignedIn() && org == orgOf();
      allow create: if isSignedIn() && org == orgOf();
      allow update, delete: if isSignedIn() && resource.data.owner_id == request.auth.uid && org == orgOf();

      match /roster/{userId} {
        allow read: if isSignedIn() && org == orgOf();
        allow write: if isSignedIn() && org == orgOf()
                     && ((resource != null && request.auth.uid == resource.data.owner_id) || request.auth.token.role in ['instructor','admin']);
      }

      match /classwork/{classworkId} {
        allow read: if isSignedIn() && org == orgOf();
        allow create: if isSignedIn() && org == orgOf();
        allow update, delete: if isSignedIn() && request.auth.uid == resource.data.owner_id && org == orgOf();
      }
    }

    match /org/{org}/attempts/{attemptId} {
      allow read: if isSignedIn() && org == orgOf();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId && org == orgOf();
      allow update: if false; // append-only
    }

    match /presence/{docId} {
      allow read, write: if isSignedIn(); // demo scope (tighten in prod)
    }

    match /live/{sessionId}/{coll=/(offers|answers|ice)/}/{docId} {
      allow read, write: if isSignedIn();
    }
  }
}
