rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    // Check membership from already-loaded classroom data (avoids self-get on classrooms).
    function classroomDataHasStudent(classroomData) {
      return isAuthenticated() &&
        ('students' in classroomData) &&
        classroomData.students.hasAny([request.auth.uid]);
    }

    // Role resolution based on profile collections instead of sign-in provider.
    function isTeacher() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }

    function isStudent() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    // Membership helper that works for any authenticated user, regardless of provider.
    function userInClassroom(classroomId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/classrooms/$(classroomId)) &&
        ('students' in get(/databases/$(database)/documents/classrooms/$(classroomId)).data) &&
        (get(/databases/$(database)/documents/classrooms/$(classroomId)).data.students is list) &&
        (get(/databases/$(database)/documents/classrooms/$(classroomId)).data.students.hasAny([request.auth.uid]));
    }

    function teacherOwnsClassroom(classroomId) {
      return request.auth != null &&
        exists(/databases/$(database)/documents/classrooms/$(classroomId)) &&
        get(/databases/$(database)/documents/classrooms/$(classroomId)).data.teacherId == request.auth.uid;
    }

    function teacherOwnsResource(resourceTeacherId) {
      return isAuthenticated() && resourceTeacherId == request.auth.uid;
    }

    function teacherOwnsDocument(path) {
      return exists(path) && teacherOwnsResource(get(path).data.teacherId);
    }

    function teacherOwnsAssignment(assignmentId) {
      return request.auth != null &&
        exists(/databases/$(database)/documents/assignments/$(assignmentId)) &&
        get(/databases/$(database)/documents/assignments/$(assignmentId)).data.classroomId != null &&
        exists(/databases/$(database)/documents/classrooms/$(get(/databases/$(database)/documents/assignments/$(assignmentId)).data.classroomId)) &&
        get(/databases/$(database)/documents/classrooms/$(get(/databases/$(database)/documents/assignments/$(assignmentId)).data.classroomId)).data.teacherId == request.auth.uid;
    }

    // Check that a classroom exists and the current student belongs to its roster.
    function studentInClassroom(classroomId) {
      return isStudent() &&
        exists(/databases/$(database)/documents/classrooms/$(classroomId)) &&
        ('students' in get(/databases/$(database)/documents/classrooms/$(classroomId)).data) &&
        (get(/databases/$(database)/documents/classrooms/$(classroomId)).data.students.hasAny([request.auth.uid]));
    }

    // Student is enrolled (participant doc exists) in a specific live session.
    function studentInSession(sessionId) {
      return isStudent() &&
        exists(/databases/$(database)/documents/sessions/$(sessionId)) &&
        exists(/databases/$(database)/documents/sessions/$(sessionId)/participants/$(request.auth.uid));
    }

    // Allow quiz reads for students already admitted to the live session tied to that quiz.
    function quizAccessibleViaSession(quizId) {
      return isStudent() &&
        request.queryParams.sessionId != null &&
        exists(/databases/$(database)/documents/sessions/$(request.queryParams.sessionId)) &&
        get(/databases/$(database)/documents/sessions/$(request.queryParams.sessionId)).data.quizId == quizId &&
        studentInSession(request.queryParams.sessionId);
    }

    function sessionJoinable(path) {
      return exists(path) &&
        (
          (get(path).data.status == 'lobby' || get(path).data.status == 'active') &&
          !(
            (get(path).data.lockAfterQ1 == true) &&
            ((get(path).data.currentIndex == null ? 0 : get(path).data.currentIndex) >= 1)
          )
        );
    }

    function cleanAttemptPayload() {
      return request.resource != null &&
        !request.resource.data.keys().hasAny([
          'points',
          'correct',
          'totalPoints',
          'totalTimeMs',
          'scoredAt',
          'sequenceNumber',
          'syncedAt',
          'ackLatencyMs'
        ]);
    }

    function cleanParticipantPayload() {
      return request.resource != null &&
        !request.resource.data.keys().hasAny([
          'totalPoints',
          'totalTimeMs',
          'points',
          'rank'
        ]);
    }

    match /teachers/{teacherId} {
      allow read: if isAuthenticated();
      allow create, update: if isTeacher() && request.auth.uid == teacherId;
      allow delete: if false;
    }

    // Student profiles: any authenticated user can manage their own profile; teachers may read for roster/join requests.
    match /students/{studentId} {
      allow read: if (request.auth != null && request.auth.uid == studentId) || isTeacher();
      allow create, update: if isAuthenticated() && request.auth.uid == studentId;
      allow delete: if false;
    }

    match /classrooms/{classroomId} {
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      // Teachers: only their own classrooms. Students: classrooms they belong to.
      allow read: if (resource.data.teacherId == request.auth.uid) || classroomDataHasStudent(resource.data);
      allow update, delete: if teacherOwnsClassroom(classroomId);
    }

    match /quizzes/{quizId} {
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      // Teachers own their quizzes. Students can read quiz metadata if the quiz lives in a classroom they belong to
      // or if it is linked to an assignment in their classroom (legacy client path).
      allow read: if (
        (resource.data.teacherId == request.auth.uid) ||
        (resource.data.classroomId != null && teacherOwnsClassroom(resource.data.classroomId)) ||
        (resource.data.classroomId != null && userInClassroom(resource.data.classroomId)) ||
        (
          isStudent() &&
          exists(/databases/$(database)/documents/assignments/$(request.queryParams.assignmentId)) &&
          get(/databases/$(database)/documents/assignments/$(request.queryParams.assignmentId)).data.quizId == quizId &&
          studentInClassroom(get(/databases/$(database)/documents/assignments/$(request.queryParams.assignmentId)).data.classroomId)
        ) ||
        quizAccessibleViaSession(quizId)
      );
      allow update, delete: if resource.data.classroomId != null && teacherOwnsClassroom(resource.data.classroomId);
    }

    // Topic metadata owned by teachers (used when building quizzes).
    match /topics/{topicId} {
      allow read: if (
        (isTeacher() && resource.data.teacherId == request.auth.uid) ||
        (resource.data.classroomId != null && userInClassroom(resource.data.classroomId))
      );
      allow create, update, delete: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
    }

    match /sessions/{sessionId} {
      allow read: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId)) ||
        (isStudent() && sessionJoinable(/databases/$(database)/documents/sessions/$(sessionId)));

      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));

      match /participants/{participantId} {
        allow read: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId)) ||
          (isStudent() && sessionJoinable(/databases/$(database)/documents/sessions/$(sessionId)) && request.auth.uid == participantId);
        allow create: if cleanParticipantPayload() && (
          teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId)) ||
          (isStudent() && sessionJoinable(/databases/$(database)/documents/sessions/$(sessionId)) && request.auth.uid == participantId)
        );
        allow update, delete: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));
      }

      match /attempts/{attemptId} {
        allow read: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId)) ||
          (isStudent() && resource.data.uid == request.auth.uid);
        allow create: if cleanAttemptPayload() && (
          teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId)) ||
          (isStudent() && sessionJoinable(/databases/$(database)/documents/sessions/$(sessionId)) && request.resource.data.uid == request.auth.uid)
        );
        allow update, delete: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));
      }
    }

    match /assignments/{assignmentId} {
      allow read: if (
        resource.data.classroomId != null &&
          (
            teacherOwnsClassroom(resource.data.classroomId) ||
            userInClassroom(resource.data.classroomId)
          )
      );
      allow create: if isTeacher() &&
        request.resource.data.quizId != null &&
        request.resource.data.classroomId != null &&
        teacherOwnsClassroom(request.resource.data.classroomId);
      allow update, delete: if resource.data.classroomId != null && teacherOwnsClassroom(resource.data.classroomId);

      match /attempts/{attemptId} {
        allow create: if isStudent() &&
          request.resource.data.uid == request.auth.uid &&
          request.resource.data.assignmentId == assignmentId &&
          studentInClassroom(request.resource.data.classroomId) &&
          cleanAttemptPayload();
        allow read: if teacherOwnsAssignment(assignmentId) ||
          (
            isStudent() &&
              resource.data.uid == request.auth.uid &&
              studentInClassroom(get(/databases/$(database)/documents/assignments/$(assignmentId)).data.classroomId)
          );
        allow update, delete: if false;
      }

      match /submissions/{uid} {
        allow read: if teacherOwnsAssignment(assignmentId) ||
          (request.auth != null && request.auth.uid == uid);
        // Allow the authenticated user to submit/update their own assignment submission
        // as long as the assignment exists. Classroom membership is not enforced to
        // avoid blocking offline/unsynced rosters.
        allow create, update: if request.auth != null &&
          request.auth.uid == uid &&
          exists(/databases/$(database)/documents/assignments/$(assignmentId));
        allow delete: if false;
      }
    }

    // Learning materials: owned by teachers; classroom members can read.
    match /materials/{materialId} {
      allow read: if (isTeacher() && teacherOwnsResource(resource.data.teacherId)) ||
        (resource.data.classroomId != null && userInClassroom(resource.data.classroomId));
      allow create, update, delete: if isTeacher() && (
        teacherOwnsResource(request.resource.data.teacherId) &&
        request.resource.data.classroomId != null &&
        teacherOwnsDocument(/databases/$(database)/documents/classrooms/$(request.resource.data.classroomId))
      );
    }

    // Join requests: students create their own requests; teachers read/resolve requests for their classrooms.
    match /joinRequests/{requestId} {
      allow create: if isAuthenticated() &&
        request.resource.data.studentId == request.auth.uid;
      allow read: if isTeacher() ||
        (request.auth != null && request.auth.uid == resource.data.studentId);
      allow update: if isTeacher() && resource.data.teacherId == request.auth.uid;
      allow delete: if false;
    }

    match /lanMeta/{sessionId} {
      allow read: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));
      allow create, update, delete: if isTeacher() &&
        teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
