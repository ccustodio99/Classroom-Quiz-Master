rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isTeacher() {
      return request.auth != null &&
        request.auth.token.firebase != null &&
        request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    function isStudent() {
      return request.auth != null &&
        request.auth.token.firebase != null &&
        request.auth.token.firebase.sign_in_provider == 'anonymous';
    }

    function ownsQuiz(quizId) {
      return get(/databases/$(database)/documents/quizzes/$(quizId)).data.teacherId == request.auth.uid;
    }

    function sessionDoc(sessionId) {
      return get(/databases/$(database)/documents/sessions/$(sessionId));
    }

    function ownsSession(sessionId) {
      let session = sessionDoc(sessionId);
      return session.exists() && session.data.teacherId == request.auth.uid;
    }

    function sessionJoinable(sessionId) {
      let session = sessionDoc(sessionId);
      return session.exists() &&
        (session.data.status in ['lobby', 'active']) &&
        !((session.data.lockAfterQ1 == true) && session.data.currentIndex >= 1);
    }

    function noAttemptScoreFields() {
      return !('points' in request.resource.data) && !('correct' in request.resource.data) && !('late' in request.resource.data);
    }

    function noParticipantScoreFields() {
      return !('totalPoints' in request.resource.data) && !('totalTimeMs' in request.resource.data);
    }

    match /quizzes/{quizId} {
      allow read, write: if isTeacher() &&
        request.auth.uid == (request.resource.data.teacherId ?? resource.data.teacherId);
    }

    match /sessions/{sessionId} {
      allow read: if (isTeacher() && ownsSession(sessionId)) || (isStudent() && sessionJoinable(sessionId));
      allow create: if isTeacher() && ownsQuiz(request.resource.data.quizId);
      allow update, delete: if isTeacher() && ownsSession(sessionId);

      match /participants/{participantId} {
        allow read: if isTeacher() && ownsSession(sessionId);
        allow create: if isStudent() &&
          request.auth.uid == participantId &&
          sessionJoinable(sessionId) &&
          noParticipantScoreFields();
        allow update, delete: if isTeacher() && ownsSession(sessionId);
      }

      match /attempts/{attemptId} {
        allow read: if isTeacher() && ownsSession(sessionId);
        allow create: if isStudent() &&
          request.auth.uid == request.resource.data.uid &&
          noAttemptScoreFields();
        allow update, delete: if false;
      }
    }

    match /assignments/{assignmentId} {
      allow read: if (isTeacher() && ownsQuiz(resource.data.quizId ?? request.resource.data.quizId)) || isStudent();
      allow create, update, delete: if isTeacher() && ownsQuiz(request.resource.data.quizId ?? resource.data.quizId);

      match /attempts/{attemptId} {
        allow create: if isStudent() &&
          request.auth.uid == request.resource.data.uid &&
          noAttemptScoreFields();
        allow read: if isTeacher() && ownsQuiz((resource.data.quizId ?? request.resource.data.quizId));
        allow update, delete: if false;
      }

      match /submissions/{uid} {
        allow read: if request.auth != null && (request.auth.uid == uid || isTeacher());
        allow write: if false;
      }
    }
  }
}
