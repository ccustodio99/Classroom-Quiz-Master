rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null && request.auth.token.firebase != null;
    }

    function isTeacher() {
      return isAuthenticated() && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    function isStudent() {
      return isAuthenticated() && request.auth.token.firebase.sign_in_provider == 'anonymous';
    }

    function teacherOwnsResource(resourceTeacherId) {
      return isTeacher() && resourceTeacherId == request.auth.uid;
    }

    function teacherOwnsDocument(path) {
      return exists(path) && teacherOwnsResource(get(path).data.teacherId);
    }

    function sessionJoinable(path) {
      if (!exists(path)) {
        return false;
      }
      let session = get(path).data;
      let status = session.status;
      let currentIndex = session.currentIndex == null ? 0 : session.currentIndex;
      let lockAfterQ1 = session.lockAfterQ1 == true;
      return (status == 'lobby' || status == 'active') && !(lockAfterQ1 && currentIndex >= 1);
    }

    function cleanAttemptPayload() {
      return request.resource != null &&
        !request.resource.data.keys().hasAny([
          'points',
          'correct',
          'totalPoints',
          'totalTimeMs',
          'scoredAt',
          'sequenceNumber',
          'syncedAt',
          'ackLatencyMs'
        ]);
    }

    function cleanParticipantPayload() {
      return request.resource != null &&
        !request.resource.data.keys().hasAny([
          'totalPoints',
          'totalTimeMs',
          'points',
          'rank'
        ]);
    }

    match /teachers/{teacherId} {
      allow read, write: if isTeacher() && request.auth.uid == teacherId;
    }

    match /classrooms/{classroomId} {
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      allow read, update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    match /quizzes/{quizId} {
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      allow read, update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    match /sessions/{sessionId} {
      allow read: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId)) ||
        (isStudent() && sessionJoinable(/databases/$(database)/documents/sessions/$(sessionId)));

      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));

      match /participants/{participantId} {
        allow read: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId)) ||
          (isStudent() && sessionJoinable(/databases/$(database)/documents/sessions/$(sessionId)) && request.auth.uid == participantId);
        allow create: if cleanParticipantPayload() && (
          teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId)) ||
          (isStudent() && sessionJoinable(/databases/$(database)/documents/sessions/$(sessionId)) && request.auth.uid == participantId)
        );
        allow update, delete: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));
      }

      match /attempts/{attemptId} {
        allow read: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));
        allow create: if cleanAttemptPayload() && (
          teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId)) ||
          (isStudent() && sessionJoinable(/databases/$(database)/documents/sessions/$(sessionId)) && request.resource.data.uid == request.auth.uid)
        );
        allow update, delete: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));
      }
    }

    match /assignments/{assignmentId} {
      allow read: if (isTeacher() && teacherOwnsDocument(/databases/$(database)/documents/assignments/$(assignmentId))) || isStudent();
      allow create: if isTeacher() && request.resource.data.quizId != null &&
        teacherOwnsDocument(/databases/$(database)/documents/quizzes/$(request.resource.data.quizId));
      allow update, delete: if isTeacher() && teacherOwnsDocument(/databases/$(database)/documents/assignments/$(assignmentId));

      match /attempts/{attemptId} {
        allow create: if isStudent() && request.resource.data.uid == request.auth.uid && cleanAttemptPayload();
        allow read: if isTeacher() && teacherOwnsDocument(/databases/$(database)/documents/assignments/$(assignmentId));
        allow update, delete: if false;
      }

      match /submissions/{uid} {
        allow read: if (isTeacher() && teacherOwnsDocument(/databases/$(database)/documents/assignments/$(assignmentId))) ||
          (request.auth != null && request.auth.uid == uid);
        allow write: if false;
      }
    }

    match /lanMeta/{sessionId} {
      allow read: if teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));
      allow create, update, delete: if isTeacher() &&
        teacherOwnsDocument(/databases/$(database)/documents/sessions/$(sessionId));
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
